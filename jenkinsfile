pipeline{
  agent any
  stages{
    stage('maven build'){
      steps{
          sh 'mvn clean install package'
          archiveArtifacts artifacts: 'target/*.war'  
      }
    }
    stage ('nexus upload') {
      steps{
        nexusArtifactUploader artifacts: [
        [artifactId: 'simple-app', 
        classifier: '', 
        file: './target/simple-app-1.0.0-SNAPSHOT.war', 
        type: 'war']
        ], 
        credentialsId: 'nexus3', 
        groupId: 'in.javahome', 
        nexusUrl: '3.0.100.32:8081', 
        nexusVersion: 'nexus3', 
        protocol: 'http', 
        repository: 'simpleapp-SNAPSHOT', 
        version: '1.0.0-SNAPSHOT'
      }
     }
     stage ('build docker image') {
      steps{
        sh 'docker build -t ajit4/simpleapp:${BUILD_NUMBER} .'
      }
     }
     stage ('push image to docker hub') {
      steps {
        withCredentials([string(credentialsId: 'dockerhub', variable: 'dockerhub')]) {
            sh "docker login -u ajit4 -p ${dockerhub}"
       }
        sh "docker push ajit4/simpleapp:${BUILD_NUMBER}"
      }
     }
     stage ('deploy on server') {
     	steps {
		sshagent (credentials: ['deployserver']) {
		    
		    sh "ssh -o StrictHostKeyChecking=no ec2-user@3.0.100.32 docker run -itd -p 9000:9000 --name=simpleapp-${BUILD_NUMBER} --entrypoint=/bin/bash ajit4/simpleapp:${BUILD_NUMBER}"
		    
		    
		    
	   }
	}
     }
   }
}
